# ===========================
# 代理Bot配置示例
# Agent Bot Configuration Example
# ===========================

# Bot基本配置
AGENT_BOT_ID=your_agent_bot_id
AGENT_BOT_TOKEN=your_bot_token_here
AGENT_NAME=代理商店
AGENT_USERNAME=agent_bot
AGENT_COMMISSION_RATE=0.25
AGENT_CUSTOMER_SERVICE=@support

# 管理员ID（多个用逗号分隔）
ADMIN_IDS=1681704945

# 通知频道/群组
NOTIFY_CHANNEL_ID=0
AGENT_ORDER_NOTIFY_GROUP=-100xxxxxxxxxx

# UI配置
BANNER_IMAGE_URL=
BOT_NAME=
BOT_SLOGAN=
PERMANENT_USERNAME=
NOTIFICATION_GROUP=
PURCHASE_NOTICE=
PURCHASE_NOTICE_EN=

# 私信广播配置
BROADCAST_DELAY=0.05

# Session文件路径配置
BASE_PROTOCOL_PATH=/www/haopubot/haopu-main/协议号
FALLBACK_PROTOCOL_PATH=./协议号

# ===========================
# 账号检测配置
# Account Detection Configuration
# ===========================

# Telegram API 配置（用于账号检测）
API_ID=2040
API_HASH=b18441a1ff607e10a989891a5462e627

# 坏号通知群组ID（发送封禁/冻结账号）
BAD_ACCOUNT_GROUP_ID=-100xxxxxxxxxx

# 是否启用账号检测（true/false）
ENABLE_ACCOUNT_DETECTION=true

# ===========================
# 数据库配置
# Database Configuration
# ===========================

MONGO_URI=mongodb://127.0.0.1:27017/
MONGO_DB_NAME=agentbot
